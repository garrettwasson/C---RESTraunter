<h1>Reviews</h1>
<a href="/">Return Home</a>
@foreach(var review in ViewBag.allReviews)
{
    <h3>Review for: @review.restaurantName - @review.stars Stars</h3>
    <h4>Reviewer: @review.reviewerName - @review.date.ToString("D")</h4>
    <p style="margin-left: 15px; padding-bottom: 10px; border-bottom: 1px solid silver;">@review.review</p>
}